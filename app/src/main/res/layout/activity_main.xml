<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark"
    tools:context="com.akotnana.quizapp.activities.MainActivity">

    <LinearLayout
        android:id="@+id/top_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:layout_weight="50"
        android:orientation="vertical"
        android:layout_marginStart="50dp"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="35dp">

        <de.hdodenhof.circleimageview.CircleImageView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/profile_image"
            android:layout_width="96dp"
            android:layout_height="96dp"
            android:src="@drawable/koala"
            app:civ_border_width="2dp"
            android:layout_marginBottom="12dp"
            app:civ_border_color="#00000000"/>

        <TextView
            android:id="@+id/profile_name"
            android:layout_width="match_parent"
            android:layout_gravity="left"
            android:text="Ashwin Pathi"
            android:textStyle="bold"
            android:textSize="24sp"
            android:textColor="@color/colorAccent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/profile_level"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginTop="1dp"
            android:textColor="@color/colorAccent"
            android:text="Level 31"
            android:textSize="14sp"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/middle_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="300"
        android:orientation="vertical"
        android:layout_marginStart="50dp"
        android:layout_gravity="start">

            <Button
                android:id="@+id/quizes_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="?attr/selectableItemBackground"
                android:backgroundTint="@color/colorAccent"
                android:clickable="true"
                android:focusable="true"
                android:drawableLeft="@drawable/ic_view_list_white_24dp"
                android:drawableTint="@color/colorAccent"
                android:drawablePadding="10dp"
                android:gravity="center_vertical|left"
                android:padding="5dp"
                android:layout_marginTop="15dp"
                android:textAllCaps="false"
                android:stateListAnimator="@null"
                android:text="Quizes"
                android:textColor="@color/colorAccent"
                android:textSize="20sp" />


            <Button
                android:id="@+id/profile_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="?attr/selectableItemBackground"
                android:backgroundTint="@color/colorAccent"
                android:clickable="true"
                android:drawableLeft="@drawable/ic_person_white_24dp"
                android:drawableTint="@color/colorAccent"
                android:drawablePadding="10dp"
                android:gravity="center_vertical|left"
                android:padding="5dp"
                android:layout_marginTop="15dp"
                android:focusable="true"
                android:textAllCaps="false"
                android:stateListAnimator="@null"
                android:text="Profile"
                android:textColor="@color/colorAccent"
                android:textSize="20sp" />

            <Button
                android:id="@+id/challenge_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="?attr/selectableItemBackground"
                android:backgroundTint="@color/colorAccent"
                android:clickable="true"
                android:focusable="true"
                android:drawableLeft="@drawable/ic_challenge"
                android:drawableTint="@color/colorAccent"
                android:drawablePadding="10dp"
                android:gravity="center_vertical|left"
                android:padding="5dp"
                android:layout_marginTop="15dp"
                android:stateListAnimator="@null"
                android:textAllCaps="false"
                android:text="Challenge"
                android:textColor="@color/colorAccent"
                android:textSize="20sp" />



            <Button
                android:id="@+id/leaderboard_button"
                android:textAllCaps="false"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="?attr/selectableItemBackground"
                android:backgroundTint="@color/colorAccent"
                android:clickable="true"
                android:drawableLeft="@drawable/ic_stars_white_24dp"
                android:drawableTint="@color/colorAccent"
                android:drawablePadding="10dp"
                android:gravity="center_vertical|left"
                android:padding="5dp"
                android:layout_marginTop="15dp"
                android:focusable="true"
                android:stateListAnimator="@null"
                android:text="Leaderboard"
                android:textColor="@color/colorAccent"
                android:textSize="20sp" />

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/bottom_layout"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">



            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="550"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:gravity="center"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/settings_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="?attr/selectableItemBackground"
                    android:backgroundTint="@color/grey_400"
                    android:clickable="true"
                    android:layout_marginLeft="-2dp"
                    android:focusable="true"
                    android:paddingBottom="5dp"
                    android:paddingTop="5dp"
                    android:drawableLeft="@drawable/ic_settings_white_24dp"
                    android:drawableTint="@color/colorAccent"
                    android:drawablePadding="10dp"
                    android:gravity="center_vertical|left"
                    android:stateListAnimator="@null"
                    android:text="Settings"
                    android:textAllCaps="false"
                    android:textColor="@color/grey_400"
                    android:textSize="16sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="550"
                android:gravity="center"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/log_out_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="-2dp"
                    android:background="?attr/selectableItemBackground"
                    android:backgroundTint="@color/grey_400"
                    android:clickable="true"
                    android:focusable="true"
                    android:drawableLeft="@drawable/ic_exit"
                    android:drawableTint="@color/colorAccent"
                    android:drawablePadding="10dp"
                    android:gravity="center_vertical|left"
                    android:paddingBottom="5dp"
                    android:textAllCaps="false"
                    android:paddingTop="5dp"
                    android:stateListAnimator="@null"
                    android:text="Log Out"
                    android:textColor="@color/grey_400"
                    android:textSize="16sp" />

            </LinearLayout>

        </LinearLayout>

    </RelativeLayout>

</LinearLayout>
