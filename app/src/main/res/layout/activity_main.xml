<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark"
    tools:context="com.akotnana.quizapp.activities.MainActivity">

    <LinearLayout
        android:id="@+id/top_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:layout_weight="5"
        android:orientation="vertical"
        android:layout_marginStart="50dp"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="50dp">

        <de.hdodenhof.circleimageview.CircleImageView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/profile_image"
            android:layout_width="96dp"
            android:layout_height="96dp"
            android:src="@drawable/koala"
            app:civ_border_width="2dp"
            app:civ_border_color="#00000000"/>

        <TextView
            android:id="@+id/profile_name"
            android:layout_width="match_parent"
            android:layout_gravity="left"
            android:text="Ashwin Pathi"
            android:textSize="24sp"
            android:textColor="@color/colorAccent"
            android:layout_marginTop="5dp"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginTop="1dp"
            android:textColor="@color/colorAccent"
            android:text="Level 31"
            android:textSize="14sp"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/middle_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="20"
        android:orientation="vertical"
        android:layout_marginStart="50dp"
        android:layout_gravity="start">

        <Button
            android:id="@+id/quizes_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:gravity="left"
            android:background="?attr/selectableItemBackground"
            android:backgroundTint="@color/colorAccent"
            android:clickable="true"
            android:focusable="true"
            android:paddingBottom="15dp"
            android:paddingTop="15dp"
            android:stateListAnimator="@null"
            android:text="Quizes"
            android:textColor="@color/colorAccent"
            android:textSize="20sp" />

        <Button
            android:id="@+id/profile_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:gravity="left"
            android:background="?attr/selectableItemBackground"
            android:backgroundTint="@color/colorAccent"
            android:clickable="true"
            android:focusable="true"
            android:paddingBottom="15dp"
            android:paddingTop="15dp"
            android:stateListAnimator="@null"
            android:text="Profile"
            android:textColor="@color/colorAccent"
            android:textSize="20sp" />

        <Button
            android:id="@+id/multiplayer_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:gravity="left"
            android:background="?attr/selectableItemBackground"
            android:backgroundTint="@color/colorAccent"
            android:clickable="true"
            android:focusable="true"
            android:paddingBottom="15dp"
            android:paddingTop="15dp"
            android:stateListAnimator="@null"
            android:text="Challenge"
            android:textColor="@color/colorAccent"
            android:textSize="20sp" />

        <Button
            android:id="@+id/leaderboard_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:gravity="left"
            android:background="?attr/selectableItemBackground"
            android:backgroundTint="@color/colorAccent"
            android:clickable="true"
            android:focusable="true"
            android:paddingBottom="15dp"
            android:paddingTop="15dp"
            android:stateListAnimator="@null"
            android:text="Leaderboard"
            android:textColor="@color/colorAccent"
            android:textSize="20sp" />

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/bottom_layout"
        android:layout_weight="0.5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <View
            android:layout_width="match_parent"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_height="0.5dp"
            android:background="@color/grey_400"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">



            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="10000"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageView"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/ic_settings_white_24dp"
                    android:tint="@color/grey_400"
                    android:tintMode="multiply" />

                <Button
                    android:id="@+id/settings_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="?attr/selectableItemBackground"
                    android:backgroundTint="@color/colorAccent"
                    android:clickable="true"
                    android:layout_marginLeft="5dp"
                    android:focusable="true"
                    android:paddingBottom="5dp"
                    android:paddingTop="5dp"
                    android:stateListAnimator="@null"
                    android:text="Settings"
                    android:textColor="@color/grey_400"
                    android:textSize="16sp" />

            </LinearLayout>

            <View
                android:layout_width="1dp"
                android:layout_weight="1"
                android:layout_height="30dp"
                android:layout_gravity="center_vertical"
                android:background="@color/grey_400"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="10000"
                android:gravity="center"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:scaleType="centerCrop"
                    android:tintMode="multiply"
                    android:tint="@color/grey_400"
                    android:src="@drawable/ic_keyboard_return_white_24dp" />

                <Button
                    android:id="@+id/log_out_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:background="?attr/selectableItemBackground"
                    android:backgroundTint="@color/colorAccent"
                    android:clickable="true"
                    android:focusable="true"
                    android:paddingBottom="5dp"
                    android:paddingTop="5dp"
                    android:stateListAnimator="@null"
                    android:text="Log Out"
                    android:textColor="@color/grey_400"
                    android:textSize="16sp" />

            </LinearLayout>

        </LinearLayout>

    </RelativeLayout>

</LinearLayout>
